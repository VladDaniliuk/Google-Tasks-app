<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="viewModel"
			type="com.example.tasklist.viewModel.TaskListViewModel" />
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swipe_refresh"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:isRefreshing="@{viewModel.fetchInProgress}">

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/list_view"
				itemTouchHelper="@{viewModel.onItemAdapter}"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:adapter="@{viewModel.adapter}"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
				tools:itemCount="20"
				tools:listitem="@layout/layout_task" />
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

		<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
			android:id="@+id/insertTaskList"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom|end"
			android:layout_margin="16dp"
			android:onClick="@{viewModel.createTaskClickListener}"
			android:elevation="6dp"
			android:text="@string/add_task"
			android:textAllCaps="false"
			app:icon="@drawable/ic_baseline_add_24"
			app:layout_behavior=".extensions.Behavior" />
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>