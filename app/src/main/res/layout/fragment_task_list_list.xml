<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="viewModel"
			type="com.example.tasklist.viewModel.TaskListListViewModel" />
	</data>

	<androidx.coordinatorlayout.widget.CoordinatorLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
			android:id="@+id/swipe_refresh"
			isRefreshing="@{viewModel.fetchInProgress}"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/list_view"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_constraintBottom_toTopOf="@+id/insertTaskList"
			app:layout_constraintTop_toTopOf="parent"
			tools:listitem="@layout/layout_task_list"
			tools:itemCount="20" />
		</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

		<com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
			android:id="@+id/insertTaskList"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10sp"
			android:onClick="@{viewModel.createTaskListClickListener}"
			android:text="@string/create_task_list"
			android:textAllCaps="false"
			android:layout_gravity="bottom|end"
			app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior" />
	</androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>