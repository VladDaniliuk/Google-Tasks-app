<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>
		<variable
			name="viewModel"
			type="com.example.tasklist.viewModel.TaskListListViewModel" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.recyclerview.widget.RecyclerView
			android:id="@+id/list_view"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			app:layout_constraintBottom_toTopOf="@+id/insertTaskList"
			app:layout_constraintTop_toTopOf="parent"
			tools:listitem="@layout/layout_task_list" />

		<com.google.android.material.button.MaterialButton
			android:id="@+id/insertTaskList"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/create_task_list"
			android:textAllCaps="false"
			android:onClick="@{viewModel.createTaskListClickListener}"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>