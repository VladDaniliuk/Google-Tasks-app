<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:motion="http://schemas.android.com/apk/res-auto">

	<Transition
		motion:constraintSetEnd="@+id/end"
		motion:constraintSetStart="@id/start"
		motion:duration="1000">
		<OnSwipe
			motion:dragDirection="dragRight"
			motion:touchAnchorId="@+id/chip4"
			motion:touchAnchorSide="right" />
	</Transition>

	<ConstraintSet android:id="@+id/start">

		<Constraint
			android:id="@+id/button"
			android:layout_height="wrap_content"
			motion:layout_constraintBottom_toBottomOf="@+id/textView"
			motion:layout_constraintStart_toEndOf="parent"
			motion:layout_constraintTop_toTopOf="@+id/textView" />
		<Constraint
			android:id="@+id/chip4"
			android:layout_width="wrap_content"
			android:layout_marginStart="8dp"
			motion:layout_constraintStart_toStartOf="parent"
			motion:layout_constraintTop_toBottomOf="@+id/textView" />
	</ConstraintSet>

	<ConstraintSet android:id="@+id/end">
		<Constraint
			android:id="@+id/recyclerView"
			android:layout_width="0sp"
			android:layout_height="0sp"
			motion:layout_constraintEnd_toStartOf="@+id/imageView"
			motion:layout_constraintStart_toEndOf="@+id/materialCheckBox"
			motion:layout_constraintTop_toBottomOf="@+id/chip4" />
		<Constraint
			android:id="@+id/button"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			motion:layout_constraintBottom_toBottomOf="@id/textView"
			motion:layout_constraintEnd_toEndOf="parent"
			motion:layout_constraintTop_toTopOf="@+id/textView" />
		<Constraint
			android:id="@+id/chip4"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_marginStart="8dp"
			android:visibility="gone"
			motion:layout_constraintStart_toStartOf="parent"
			motion:layout_constraintTop_toBottomOf="@+id/materialCheckBox" />
		<Constraint
			android:layout_height="wrap_content"
			motion:layout_constraintEnd_toStartOf="@+id/button"
			motion:layout_constraintStart_toEndOf="@+id/materialCheckBox"
			motion:layout_constraintTop_toTopOf="parent"
			android:layout_width="0sp"
			android:id="@+id/textView"
			android:layout_marginTop="8dp" />
		<Constraint
			motion:layout_constraintEnd_toStartOf="@+id/button"
			motion:layout_constraintStart_toEndOf="@+id/materialCheckBox"
			android:layout_width="0sp"
			android:layout_height="wrap_content"
			motion:layout_constraintTop_toTopOf="parent"
			android:id="@+id/textView"
			android:layout_marginTop="8dp" />
	</ConstraintSet>
</MotionScene>